{
  "name": "sapiently",
  "version": "0.0.0",
  "private": true,
  "description": "Sapiently - A modern design system implementation for React",
  "repository": {
    "type": "git",
    "url": "https://github.com/alashchev17/sapiently.git"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -ptA run build",
    "build:packages": "yarn workspaces foreach -ptA --include '@sapiently/*' run build",
    "clean": "yarn workspaces foreach -ptA run clean && rimraf node_modules .yarn",
    "clean:packages": "yarn workspaces foreach -ptA --include '@sapiently/*' run clean",
    "dev": "yarn build:packages && yarn start:storybook",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn build && changeset publish",
    "start:storybook": "yarn workspace @sapiently/storybook start",
    "build:storybook": "yarn workspace @sapiently/storybook build",
    "packages:check": "node scripts/check-peer-deps.js",
    "packages:fix": "node scripts/fix-peer-deps.js",
    "generate:tokens": "tsx scripts/generate-design-tokens.ts",
    "tokens:build": "yarn generate:tokens && yarn build:packages"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.23.0",
    "@changesets/cli": "^2.26.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^7.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=3.0.0"
  },
  "packageManager": "yarn@4.0.0"
}
